{% extends 'base.html.twig' %}

{% block title %}Offers{% endblock %}

{% block body %}
    <h1>Offers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdOffers</th>
                <td>{{ offer.idOffers }}</td>
            </tr>
            <tr>
                <th>Unit</th>
                <td>{{ offer.unit }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ offer.currency }}</td>
            </tr>
            <tr>
                <th>TargetPrice</th>
                <td>{{ offer.targetPrice }}</td>
            </tr>
            <tr>
                <th>MinimumPrice</th>
                <td>{{ offer.minimumPrice }}</td>
            </tr>
            <tr>
                <th>TransportFixed</th>
                <td>{{ offer.transportFixed }}</td>
            </tr>
            <tr>
                <th>TypeLiv</th>
                <td>{{ offer.typeLiv }}</td>
            </tr>
            <tr>
                <th>DateOffers</th>
                <td>{{ offer.dateOffers ? offer.dateOffers|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offers_index') }}">back to list</a>

    <a href="{{ path('offers_edit', {'idOffers': offer.idOffers}) }}">edit</a>

    {{ include('offers/_delete_form.html.twig') }}
