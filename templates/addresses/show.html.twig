    <table class="table">
        <tbody>
            <tr>
                <th>IdAddress</th>
                <td>{{ address.idAddress }}</td>
            </tr>
            <tr>
                <th>IsGroup</th>
                <td>{{ address.isGroup ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
