<form method="post" action="{{ path('addresses_delete', {'idAddress': address.idAddress}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.idAddress) }}">
    <button class="btn">Delete</button>
</form>
