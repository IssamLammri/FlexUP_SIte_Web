{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet"   href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

{% endblock %}

{% block body %}
    <h1>Users index</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr scope="col">
                    <th>IdUser</th>
                    <th>Email</th>
                    <th>EmailConfirmed</th>
                    <th>Mobile</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>IsPro</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.idUser }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.emailConfirmed ? 'Yes' : 'No' }}</td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.userName }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.isPro ? 'Yes' : 'No' }}</td>
                    <td>
                        <a type="button" class="btn btn-success" href="{{ path('users_show', {'idUser': user.idUser}) }}">show</a>
                        <a type="button" class="btn btn-primary" href="{{ path('users_edit', {'idUser': user.idUser}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a type="button" class="btn btn-primary btn-lg" href="{{ path('users_new') }}">Create new</a>
{% endblock %}
