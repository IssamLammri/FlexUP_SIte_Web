{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdUser</th>
                <td>{{ user.idUser }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>EmailConfirmed</th>
                <td>{{ user.emailConfirmed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ user.mobile }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>UserName</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsPro</th>
                <td>{{ user.isPro ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PidNumber</th>
                <td>{{ user.pidNumber }}</td>
            </tr>
            <tr>
                <th>PidExpirationDate</th>
                <td>{{ user.pidExpirationDate ? user.pidExpirationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PidEmissionEntity</th>
                <td>{{ user.pidEmissionEntity }}</td>
            </tr>
            <tr>
                <th>SSN</th>
                <td>{{ user.sSN }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('users_index') }}">back to list</a>

    <a href="{{ path('users_edit', {'idUser': user.idUser}) }}">edit</a>

    {{ include('users/_delete_form.html.twig') }}
{% endblock %}
