{% extends 'base.html.twig' %}

{% block title %}Basket index{% endblock %}

{% block body %}
    <h1>Basket index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdBasket</th>
                <th>IsGroup</th>
                <th>IsPaid</th>
                <th>NameCustomer</th>
                <th>TotalPrice</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td>{{ basket.idBasket }}</td>
                <td>{{ basket.isGroup ? 'Yes' : 'No' }}</td>
                <td>{{ basket.isPaid ? 'Yes' : 'No' }}</td>
                <td>{{ basket.nameCustomer }}</td>
                <td>{{ basket.totalPrice }}</td>
                <td>
                    <a href="{{ path('basket_show', {'idBasket': basket.idBasket}) }}">show</a>
                    <a href="{{ path('basket_edit', {'idBasket': basket.idBasket}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('basket_new') }}">Create new</a>
{% endblock %}
