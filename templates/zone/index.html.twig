{% extends 'base.html.twig' %}

{% block title %}Zone index{% endblock %}

{% block body %}
    <h1>Zone index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdZone</th>
                <th>NameZone</th>
                <th>Level</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.idZone }}</td>
                <td>{{ zone.nameZone }}</td>
                <td>{{ zone.level }}</td>

                <td>
                    <a href="{{ path('zone_show', {'idZone': zone.idZone}) }}">show</a>
                    <a href="{{ path('zone_edit', {'idZone': zone.idZone}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('zone_new') }}">Create new</a>
{% endblock %}
