<form method="post" action="{{ path('currency_delete', {'idCurrency': currency.idCurrency}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ currency.idCurrency) }}">
    <button class="btn">Delete</button>
</form>
