            </tr>
            <tr>
                <th>NameClient</th>
                <td>{{ enquiry.nameClient }}</td>
            </tr>
            <tr>
                <th>NameService</th>
                <td>{{ enquiry.nameService }}</td>
            </tr>
            <tr>
                <th>NameZone</th>
                <td>{{ enquiry.nameZone }}</td>
